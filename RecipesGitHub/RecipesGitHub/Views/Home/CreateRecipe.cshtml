@{
    ViewBag.Title = "Create Recipe";
}

<h1>Create recipe</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-list-ul"></i> Ingredients
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><i class="far fa-dot-circle"></i> Ingredient</li>
            </ul>
        </div>
        <div class="d-flex justify-content-center align-items-center">
            <button type="button" class="btn btn-primary">Add</button>
            <label class="p-2 m-0" for="sel1">Select ingredient:</label>
            <select class="green-border form-control" id="sel1">
                <option>Apple</option>
                <option>Flour</option>
                <option>Chicken</option>
                <option>Basil</option>
            </select>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-utensils"></i> Card title</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <img class="rounded img-fluid" src="http://via.placeholder.com/400x400" alt="Placeholder" />
        <div class="p-2 d-flex justify-content-center align-items-center">
            <button type="button" class="btn btn-primary">Upload image</button>
        </div>
    </div>
</div>
<br />
<div class="card mb-0 rounded-only-top">
    <div class="card-header">
        <span class="float-left">Description</span>
    </div>
</div>

<textarea class="form-control w-100 rounded-only-bottom" id="exampleFormControlTextarea1" rows="8"></textarea>
<div class="p-2 d-flex justify-content-center align-items-center">
    <button type="button" class="btn btn-primary btn-lg">Create recipe</button>
</div>
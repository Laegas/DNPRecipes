@using RecipesGitHub.Models
@model FullRecipe
@{
    ViewBag.Title = "See Recipe";
}

@*@(Model.NAME ?? String.empty*@
<h1>number of ingredients in the recipe @Model.Ingredients.Count </h1>


<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Ingredients
            </div>
            <ul class="list-group list-group-flush">
                @{ for (int i = 0; i < 4; i++)
                    {
                <li class="list-group-item">Ingredient @(i + 1) @ViewBag.potato
                
                </li>
                    }
                }
            </ul>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"> @Model.name </h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <img class="rounded img-fluid" src="http://via.placeholder.com/400x400" alt="Placeholder" />
    </div>
</div>
<br />
<div class="card ">
    <div class="card-header">
        <span class="float-left">Description</span> 
        <span class="float-right small text-muted">2 days ago</span>
    </div>
    <div class="card-body">
        <h5 class="card-title">Special title treatment</h5>
        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
    </div>
</div>